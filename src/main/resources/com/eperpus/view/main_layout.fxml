<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eperpus.controller.MainController">
    <children>
        <HBox alignment="CENTER_RIGHT" spacing="10" layoutX="10" layoutY="10">
            <Label text="Welcome, " fx:id="usernameLabel" />
            <Button text="Account" onAction="#showAccountDetails"/>
        </HBox>

        <!-- Tabel Buku -->
        <TableView fx:id="bookTable" layoutX="50" layoutY="50" prefWidth="600">
            <columns>
                <TableColumn text="Title" prefWidth="200" fx:id="bookTitleColumn">
                    <cellValueFactory>
                        <PropertyValueFactory property="title"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Author" prefWidth="200" fx:id="bookAuthorColumn">
                    <cellValueFactory>
                        <PropertyValueFactory property="author"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Price" prefWidth="100" fx:id="bookPriceColumn">
                    <cellValueFactory>
                        <PropertyValueFactory property="price"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Action" prefWidth="100" fx:id="bookActionColumn">
                    <cellFactory>
                        <PropertyValueFactory property="action"/>
                    </cellFactory>
                </TableColumn>
            </columns>
        </TableView>

        <!-- Tabel Majalah -->
        <TableView fx:id="magazineTable" layoutX="50" layoutY="250" prefWidth="600">
            <columns>
                <TableColumn text="Title" prefWidth="200" fx:id="magazineTitleColumn">
                    <cellValueFactory>
                        <PropertyValueFactory property="title"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Publisher" prefWidth="200" fx:id="magazinePublisherColumn">
                    <cellValueFactory>
                        <PropertyValueFactory property="publisher"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Price" prefWidth="100" fx:id="magazinePriceColumn">
                    <cellValueFactory>
                        <PropertyValueFactory property="price"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Action" prefWidth="100" fx:id="magazineActionColumn">
                    <cellFactory>
                        <PropertyValueFactory property="action"/>
                    </cellFactory>
                </TableColumn>
            </columns>
        </TableView>
    </children>
</AnchorPane>
